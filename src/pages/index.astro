    <style>

/* --- Modern CSS Reset (Andy Bell inspired) --- */
*,
*::before,
*::after {
  box-sizing: border-box;
}

* {
  margin: 0;
}

html,
body {
  height: 100%;
}

body {
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

img,
picture,
video,
canvas,
svg {
  display: block;
  max-width: 100%;
}

input,
button,
textarea,
select {
  font: inherit;
}

p,
h1,
h2,
h3,
h4,
h5,
h6 {
  overflow-wrap: break-word;
}

:root {
  --font-body: "Raleway", system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Helvetica, Arial, sans-serif;

  --font-heading: "Shrikhand", Georgia, serif;
}

/* CSS for Logo on video: */

.hero-logo {
  position: absolute;
  top: 2rem;
  left: 2rem;
  z-index: 2;
}

.hero-logo img {
  height: 200px;
  width: auto;
    opacity: 0.9;
}

@media (max-width: 768px) {
  .hero-logo {
    top: 1.25rem;
    left: 1.25rem;
  }

  .hero-logo img {
    height: 32px;
  }
}

/* CSS for video: */

.hero {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: black;
}

.video {
  position: absolute;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  transform: translate(-50%, -50%);
  object-fit: cover;
}

/* Desktop */
.video-desktop {
  display: block;
}

/* Mobile */
.video-mobile {
  display: none;
}

/* Switch videos on small screens */
@media (max-width: 768px) {
  .video-desktop {
    display: none;
  }

  .video-mobile {
    display: block;
  }
}

/* CSS for text-box overlaying end of video */

.hero-box {
  position: absolute;
  bottom: 2.5rem;
  left: 2.5rem;
  max-width: 480px;
  padding: 1.5rem 1.75rem;
  background: rgba(0, 0, 0, 0.55);
  backdrop-filter: blur(2px);
  border-radius: 12px;
  color: #fff;
  z-index: 2;
}

.hero-box p {
  margin: 0;
  font-size: 1rem;
  line-height: 1.5;
}

.hero-box strong {
  font-weight: 500;
}


/* CSS for after video */
.intro {
  max-width: 720px;
  margin: 6rem auto;
  padding: 0 1.5rem;
  font-size: 1.1rem;
  line-height: 1.6;
}

.intro h1 {
  font-size: 2.2rem;
  margin-bottom: 1.5rem;
}

/* CSS for site otherwise (non-video): */

	:root {
  --bg: #f4f2ef;         /* warm, off-white canvas */
  --text: #1a1a1a;       /* near-black text */
  --accent: #5f6f52;     /* earthy olive accent */
  --highlight: #e2c290;  /* soft golden highlight for hero */
  --dark: #111;           /* footer background */
}

/* Base */
body {
  font-family: var(--font-body);
  font-size: 16px;
  color: #111;
  background: #fff;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-heading);
  font-weight: 400;
  line-height: 1.2;
}

/* Hero / Welcome Section */
.hero {
  padding: 8rem 1.5rem;
  text-align: center;
  background: linear-gradient(to bottom, var(--highlight), var(--bg));
}

.hero h1 {
  font-size: clamp(3rem, 6vw, 5rem);
  color: var(--accent);
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
  line-height: 1.1;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.15);
  transform: translateY(-10px);
  animation: slideIn 1s ease forwards;
}

.hero p {
  font-size: 1.25rem;
  max-width: 750px;
  margin: 1rem auto;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 1s ease 0.5s forwards;
}

/* Videos Section */
section h2 {
  font-size: 2.5rem;
  color: var(--accent);
  text-align: center;
  margin-bottom: 3rem;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
}

.videos {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2.5rem;
  padding-bottom: 4rem;
}

iframe {
  width: 100%;
  aspect-ratio: 16/9;
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

iframe:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.35);
}

/* Footer / Contact */
footer {
  background: var(--dark);
  color: #eaeaea;
  padding: 3rem 1.5rem;
  text-align: center;
}

footer h2 {
  color: #fff;
  font-size: 2rem;
  margin-bottom: 1rem;
}

footer p {
  color: #d0d0d0;
  margin: 0.5rem 0;
}

/* Links */
a {
  color: var(--accent);
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

/* Animations */
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

    </style>
